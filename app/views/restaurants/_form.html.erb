<div class="large-8 columns">
<%= form_for([@owner, @restaurant]) do |f| %>
   <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br/>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :image %><br/>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br/>
    <%= f.number_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :website_url %><br/>
    <%= f.text_field :website_url %><br/>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>

</div>
